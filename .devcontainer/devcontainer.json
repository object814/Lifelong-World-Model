{
  "name": "llwm-haoyu",
  "dockerComposeFile": [
    "../docker/docker-compose.yml"
  ],
  "service": "llwm-haoyu",
  "workspaceFolder": "/workspace/src",
  "shutdownAction": "stopCompose",
  "workspaceMount": "source=${localWorkspaceFolder}/src,target=/workspace/src,type=bind,consistency=cached",
  "workspaceUser": "auto",
  "overrideCommand": false,
  "remoteUser": "haoyu",
  "runServices": [
    "llwm-haoyu"
  ],
  "containerEnv": {
    "WORKSPACE_DIR": "/workspace"
  },
  "extensions": [
    "ms-vscode-remote.remote-containers",
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter",
    "ms-azuretools.vscode-docker"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "python.defaultInterpreterPath": "/usr/bin/python"
  },
  "postStartCommand": "python -c \"import torch; print('torch', getattr(torch,'__version__','n/a')); print('cuda available', getattr(torch,'cuda',None) and torch.cuda.is_available())\" || true"
}
